/**
 * Return the internal type for a given Publizon format.
 */
function reol_base_get_type_from_format($format) {
  foreach (_reol_base_get_types() as $type => $spec) {
    if (in_array($format, $spec['publizon_formats'])) {
      return $type;
    }
  }
  return '';
}

